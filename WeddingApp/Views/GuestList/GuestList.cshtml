							<span class="mx-1">|</span>
							<a asp-controller="Vendor" asp-action="GetEditVendorRequest" asp-route-vendorId="@vendor.VendorId">Edit</a>
							<span class="mx-1">|</span>
							<button type="submit" class="btn btn-link">Delete</button>
						</form> *@
					</td>
				</tr>
			
		}
	</tbody>
</table>