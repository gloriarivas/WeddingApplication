@model BarViewModel

<div class="form-group ">

    <div class="mb-3">
        <label asp-for="ActiveBar.BarName" class="form-label">Bar Name:</label>
        <input type="text" asp-for="ActiveBar.BarName" class="form-control"/>
    </div>
    <div class="mb-3">
        <label asp-for="ActiveBar.Description" class="form-label">Description:</label>
        <textarea asp-for="ActiveBar.Description" class="form-control"></textarea>
    </div>
    <div class="mb-3">
        <label asp-for="ActiveBar.SpecialInstructions" class="form-label">Special Instructions:</label>
        <textarea asp-for="ActiveBar.SpecialInstructions" class="form-control"></textarea>
    </div>

    <div class="form-group row">
        <label asp-for="ActiveBar.HoursStart" class="form-label">Hours:</label>
        <div class="col-md-3">
            <input type="text" asp-for="ActiveBar.HoursStart" class="form-control" />
        </div>
        <div class="col-md-2">
            <select asp-for="HoursStartAmPm" class="form-control">
                <option value="AM">AM</option>
                <option value="PM">PM</option>
            </select>
        </div>
        <div class="col-md-2">
            <p style="text-align:center">to:</p>
        </div>
        <div class="col-md-3">
            <input type="text" asp-for="ActiveBar.HoursEnd" class="form-control" />
        </div>
        <div class="col-md-2">
            <select asp-for="HoursEndAmPm" class="form-control" >
                <option value="AM">AM</option>
                <option value="PM">PM</option>
            </select>
        </div>

    </div>
</div>