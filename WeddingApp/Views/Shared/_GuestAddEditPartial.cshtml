@model GuestViewModel

<div class="row">
    <div class="col" style="margin:5px">
        <h2>Guest</h2>
        <div class="form-group">
            <div class="form-group row">
                <label asp-for="ActiveGuest.FirstName">First Name:</label>
                <input type="text" asp-for="ActiveGuest.FirstName" />
            </div>
            <div class="form-group row">
                <label asp-for="ActiveGuest.LastName">Last Name:</label>
                <input type="text" asp-for="ActiveGuest.LastName" />
            </div>
            <div class="form-group row">
                <label asp-for="ActiveGuest.PhoneNumber">Phone Number:</label>
                <input type="tel" asp-for="ActiveGuest.PhoneNumber" />
            </div>
            <div class="form-group row">
                <label asp-for="ActiveGuest.Email">Email:</label>
                <input type="text" asp-for="ActiveGuest.Email" />
            </div>
            <div class="form-group row">
                <label asp-for="ActiveGuest.Address">Address:</label>
                <input type="text" asp-for="ActiveGuest.Address" />
            </div>
            <div class="form-group row">
                <label asp-for="ActiveGuest.WeddingPartyId">Role:</label>
                <select asp-for="ActiveGuest.WeddingPartyId">
                    <option value="">Select a Role</option>
                    @foreach (WeddingAppDatabase.Entities.WeddingParty role in @Model.PartyRoles)
                    {
                        <option value="@role.PartyId">@role.Role</option>
                    }
                </select>
            </div>
        </div>
    </div>
    @if (Model.PlusOne != null)
    {
    <div class="col" style="margin:5px">
        <h2>Partner</h2>
        <div class="form-group">
            <div class="form-group row">
                <label asp-for="PlusOne.FirstName">First Name:</label>
                <input type="text" asp-for="PlusOne.FirstName" />
            </div>
            <div class="form-group row">
                <label asp-for="PlusOne.LastName">Last Name:</label>
                <input type="text" asp-for="PlusOne.LastName" />
            </div>
            <div class="form-group row">
                <label asp-for="PlusOne.PhoneNumber">Phone Number:</label>
                <input type="tel" asp-for="PlusOne.PhoneNumber" />
            </div>
            <div class="form-group row">
                <label asp-for="PlusOne.Email">Email:</label>
                <input type="text" asp-for="PlusOne.Email" />
            </div>
            <div class="form-group row">
                <label asp-for="PlusOne.Address">Address:</label>
                <input type="text" asp-for="PlusOne.Address" />
            </div>
            <div class="form-group row">
                <label asp-for="PlusOne.WeddingPartyId">Role:</label>
                <select asp-for="PlusOne.WeddingPartyId">
                    <option value="">Select a Role</option>
                    @foreach (WeddingAppDatabase.Entities.WeddingParty role in @Model.PartyRoles)
                    {
                        <option value="@role.PartyId">@role.Role</option>
                    }
                </select>
            </div>
        </div>
    </div> 
    }
</div>
