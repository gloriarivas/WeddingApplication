@model DressCodeViewModel

<div class="form-group">
    <div class="form-group row">
        <label asp-for="ActiveDressCode.Title" class="form-label">Title:</label>
        <input type="text" asp-for="ActiveDressCode.Title" class="form-control"/>
    </div>
    <div class="form-group row">
        <label asp-for="ActiveDressCode.DescriptionWomen" class="form-label">Women:</label>
        <input type="text" asp-for="ActiveDressCode.DescriptionWomen" class="form-control" />
    </div>
    <div class="form-group row">
        <label asp-for="ActiveDressCode.BannedItemsWomen" class="form-label">Banned Items:</label>
        <input type="text" asp-for="ActiveDressCode.BannedItemsWomen" class="form-control" />
    </div>
    <div class="form-group row">
        <label asp-for="ActiveDressCode.DescriptionMen" class="form-label">Men:</label>
        <input type="text" asp-for="ActiveDressCode.DescriptionMen" class="form-control" />
    </div>
    <div class="form-group row">
        <label asp-for="ActiveDressCode.BannedItemsMen" class="form-label">Banned Items:</label>
        <input type="text" asp-for="ActiveDressCode.BannedItemsMen" class="form-control" />
    </div>
</div>