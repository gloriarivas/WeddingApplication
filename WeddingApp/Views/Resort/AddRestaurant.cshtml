@model RestaurantViewModel
@{
    ViewData["Title"] = "Add New Restaurant";
}
<div class="col-6 mainBody" style="margin:auto">
    <h3>Add a New Restaurant</h3>
    <form class="border border-3 rounded" style="padding:15px" asp-controller="Resort" asp-action="AddRestaurant" method="post">
        <partial name="_RestaurantAddEditPartial" />
        <br />
        <button type="submit" class="btn btn-primary">Add</button>
        <a asp-controller="Resort" asp-action="GetResortInfo" class="btn btn-primary">Cancel</a>
    </form>

</div>