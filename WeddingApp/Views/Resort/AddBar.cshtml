@model BarViewModel
@{
    ViewData["Title"] = "Add New Bar";
}
<div class="col-6 mainBody" style="margin:auto">
    <h3>Add a New Bar</h3>
    <form class="border border-3 rounded" style="padding:15px" asp-controller="Resort" asp-action="AddBar" method="post">
        <partial name="_BarAddEditPartial"/>
        <br />
        <button type="submit" class="btn btn-primary">Add</button>
        <a asp-controller="Resort" asp-action="GetResortInfo" class="btn btn-primary">Cancel</a>
    </form>

</div>